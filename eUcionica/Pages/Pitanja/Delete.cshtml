@page
@model eUcionica.Pages.Pitanja.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Obriši</h1>

<h3>Da li ste sigurni da želite obrisati pitanje?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pitanje.Predmet)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pitanje.Predmet.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pitanje.Oblast)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pitanje.Oblast.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pitanje.Nivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pitanje.Nivo.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pitanje.Tekst)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pitanje.Tekst)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pitanje.Odgovor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pitanje.Odgovor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pitanje.Slika)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pitanje.Slika)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Pitanje.PitanjeID" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-page="./Pitanja">Nazad</a>
    </form>
</div>
