@page
@model eUcionica.Pages.Oblasti.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Uredi oblast</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Oblast.PredmetID" class="control-label">Predmet</label>
                <select asp-for="Oblast.PredmetID" class="form-control" asp-items="ViewBag.PredmetID"></select>
                <span asp-validation-for="Oblast.PredmetID" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Oblast.OblastID" />
            <div class="form-group">
                <label asp-for="Oblast.Naziv" class="control-label"></label>
                <input asp-for="Oblast.Naziv" class="form-control" />
                <span asp-validation-for="Oblast.Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sačuvaj izmene" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Oblasti">Nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
