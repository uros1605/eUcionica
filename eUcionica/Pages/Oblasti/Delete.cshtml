@page
@model eUcionica.Pages.Oblasti.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Obriši</h1>

<h3>Da li ste sigurni da želite obrisati oblast?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Oblast.Predmet)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Oblast.Predmet.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Oblast.Naziv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Oblast.Naziv)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Oblast.OblastID" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-page="./Oblasti">Nazad</a>
    </form>
</div>
